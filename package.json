{
  "name": "next-tpl",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "designSystem": "ladle serve",
    "premockServer": "yarn --silent get-graphql-schema ${GRAPHQL_ENDPOINT} > _server/grphqlServer/schema.graphql",
    "mockServer": "ts-node _server/grphqlServer/grphqlServer.ts --project _server/grphqlServer/tsconfig.json",
    "prebuild": "NODE_ENV=test yarn qualityCheck",
    "build": "NODE_ENV=production next build && next export",
    "qualityCheck": "run-s qualityCheck:*",
    "qualityCheck:type": "tsc --project ./tsconfig.json --noEmit",
    "qualityCheck:unitTest": "jest --testPathIgnorePatterns .gitignore",
    "qualityCheck:redundancy": "jscpd .",
    "qualityCheck:findDeadCode": "ts-prune -e",
    "qualityCheck:esLint": "eslint --max-warnings 0 --ignore-path .gitignore .",
    "qualityCheck:fmt": "prettier  --check --ignore-path .gitignore .",
    "prepare": "git config --local core.hooksPath .githooks"
  },
  "dependencies": {
    "@ladle/react": "2.4.3",
    "jest-environment-jsdom": "29.0.3",
    "next": "12.3.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-components": "5.3.5",
    "swr": "1.3.0",
    "ts-pattern": "4.0.5"
  },
  "devDependencies": {
    "@bird-studio/eslint-config": "1.3.5",
    "@bird-studio/interactive-message": "5.0.5",
    "@bird-studio/js-config": "3.6.29",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.6",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/react-hooks": "8.0.1",
    "@tsconfig/next": "1.0.2",
    "@tsconfig/strictest": "1.0.1",
    "@types/react": "18.0.20",
    "@types/styled-components": "5.1.26",
    "apollo-server-core": "3.10.2",
    "apollo-server-express": "3.10.2",
    "conventional-changelog-conventionalcommits": "5.0.0",
    "eslint": "8.23.1",
    "eslint-config-next": "12.3.0",
    "eslint-import-resolver-typescript": "3.5.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-use-encapsulation": "1.1.0",
    "express": "4.18.1",
    "get-graphql-schema": "2.1.2",
    "graphql": "16.6.0",
    "graphql-voyager": "1.0.0-rc.31",
    "jest": "29.0.3",
    "jscpd": "3.4.5",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "semantic-release": "19.0.5",
    "ts-node": "10.9.1",
    "ts-prune": "0.10.3",
    "typescript": "4.8.3"
  }
}
