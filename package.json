{
  "name": "next-tpl",
  "license": "MIT",
  "scripts": {
    "// develop": "",
    "dev": "next dev",
    "generate:fromGQL": "graphql-codegen --config codegen.ts",
    "generate:ui/general": "hygen ui/general with-prompt",
    "generate:ui/domain": "hygen ui/domain with-prompt",
    "designSystem": "ladle serve",
    "premockServer": "yarn --silent get-graphql-schema ${SCHEMA_DOWNLOAD_URL} > _server/grphqlServer/schema.graphql",
    "mockServer": "ts-node-dev --project _server/grphqlServer/tsconfig.json --respawn --transpile-only _server/grphqlServer/grphqlServer.ts",
    "_updateSnapshot": "yarn && start-server-and-test _qualityCheck:snapshotTest 61000 'yarn playwright test snapshot/snapshot.test.ts -u'",
    "updateSnapshot": "docker run --env-file='.env' --rm --network host -v $(pwd):/work/ -w /work/ -it mcr.microsoft.com/playwright /bin/bash -c 'yarn _updateSnapshot'",
    "// qualityCheck": "",
    "prequalityCheck": "yarn generate:fromGQL",
    "qualityCheck": "run-s qualityCheck:*",
    "qualityCheck:type": "tsc --project ./tsconfig.json --noEmit",
    "qualityCheck:unitTest": "yarn vitest run --coverage",
    "qualityCheck:redundancy": "jscpd src",
    "qualityCheck:findDeadCode": "ts-prune -e",
    "qualityCheck:esLint": "eslint --max-warnings 0 --ignore-path .gitignore .",
    "qualityCheck:fmt": "prettier  --check --ignore-path .gitignore .",
    "_qualityCheck:snapshotTest": "npx playwright install chromium && ladle build && ladle preview -p 61000",
    "qualityCheck:snapshotTest": "start-server-and-test _qualityCheck:snapshotTest 61000 'yarn playwright test snapshot/snapshot.test.ts'",
    "// build": "",
    "build:app": "yarn prequalityCheck && yarn next build",
    "build:designSystem": "yarn prequalityCheck && yarn ladle build",
    "// other": "",
    "prepare": "git config --local core.hooksPath .githooks"
  },
  "dependencies": {
    "@tanstack/react-query": "4.22.0",
    "graphql-request": "5.1.0",
    "next": "13.1.3",
    "normalize.css": "8.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "3.1.4",
    "ts-pattern": "4.1.3"
  },
  "devDependencies": {
    "@bird-studio/eslint-config": "1.4.0",
    "@faker-js/faker": "7.6.0",
    "@graphql-codegen/cli": "2.16.4",
    "@graphql-codegen/introspection": "2.2.3",
    "@graphql-codegen/near-operation-file-preset": "2.5.0",
    "@graphql-codegen/typed-document-node": "2.3.12",
    "@graphql-codegen/typescript": "2.8.7",
    "@graphql-codegen/typescript-operations": "2.5.12",
    "@graphql-tools/mock": "8.7.15",
    "@ladle/react": "2.4.5",
    "@playwright/test": "1.29.2",
    "@testing-library/react": "13.4.0",
    "@testing-library/react-hooks": "8.0.1",
    "@tsconfig/node16-strictest": "1.0.4",
    "@types/express": "4.17.15",
    "@types/react": "18.0.26",
    "@types/sync-fetch": "0.4.0",
    "@vitest/coverage-istanbul": "0.27.2",
    "eslint": "8.32.0",
    "eslint-config-next": "13.1.4",
    "eslint-plugin-use-encapsulation": "1.1.0",
    "eslint-plugin-vitest": "0.0.30",
    "express": "4.18.2",
    "get-graphql-schema": "2.1.2",
    "graphql": "16.6.0",
    "graphql-tools": "8.3.15",
    "graphql-voyager": "1.0.0-rc.31",
    "graphql-yoga": "3.3.0",
    "hygen": "6.2.11",
    "jscpd": "3.5.3",
    "jsdom": "21.0.0",
    "npm-run-all": "4.1.5",
    "playwright": "1.29.2",
    "prettier": "2.8.3",
    "start-server-and-test": "1.15.2",
    "sync-fetch": "0.4.2",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "ts-prune": "0.10.3",
    "typescript": "4.9.4",
    "vite": "4.0.4",
    "vitest": "0.27.2"
  }
}
