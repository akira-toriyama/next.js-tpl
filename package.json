{
  "name": "next-tpl",
  "license": "MIT",
  "scripts": {
    "// develop": "",
    "dev": "next dev",
    "generate:fromGQL": "graphql-codegen --config codegen.ts",
    "designSystem": "ladle serve",
    "premockServer": "yarn --silent get-graphql-schema ${SCHEMA_DOWNLOAD_URL} > _server/graphqlServer/schema.graphql",
    "mockServer": "ts-node-dev --project _server/graphqlServer/tsconfig.json --respawn --transpile-only _server/graphqlServer/graphqlServer.ts",
    "_updateSnapshot": "yarn && start-server-and-test _qualityCheck:snapshotTest 61000 'yarn playwright test snapshot/snapshot.test.ts -u'",
    "updateSnapshot": "docker run --env-file='.env' --rm --network host -v $(pwd):/work/ -w /work/ -it mcr.microsoft.com/playwright /bin/bash -c 'yarn _updateSnapshot'",
    "// qualityCheck": "",
    "prequalityCheck": "yarn generate:fromGQL",
    "qualityCheck": "run-s qualityCheck:*",
    "qualityCheck:type": "tsc --project ./tsconfig.json --noEmit",
    "qualityCheck:unitTest": "yarn vitest run --coverage",
    "qualityCheck:redundancy": "jscpd src",
    "qualityCheck:findDeadCode": "yarn ts-unused-exports tsconfig.json $(find ./src -name '*.ts' -or -name '*.tsx') --excludePathsFromReport='gql.ts;stories.tsx;index.ts;src/ui/provider/Wrapper.tsx'",
    "qualityCheck:esLint": "eslint --max-warnings 0 --ignore-path .gitignore .",
    "qualityCheck:fmt": "prettier  --check --ignore-path .gitignore .",
    "_qualityCheck:snapshotTest": "npx playwright install chromium && ladle build && ladle preview -p 61000",
    "qualityCheck:snapshotTest": "start-server-and-test _qualityCheck:snapshotTest 61000 'yarn playwright test snapshot/snapshot.test.ts'",
    "// build": "",
    "build:app": "yarn prequalityCheck && yarn next build",
    "build:designSystem": "yarn prequalityCheck && yarn ladle build",
    "// other": "",
    "prepare": "git config --local core.hooksPath .githooks"
  },
  "dependencies": {
    "@hookform/resolvers": "3.1.1",
    "@lukemorales/query-key-factory": "1.3.2",
    "@tanstack/react-query": "4.32.0",
    "graphql-request": "6.1.0",
    "msw": "1.2.3",
    "next": "13.4.12",
    "nextjs-progressbar": "0.0.16",
    "normalize.css": "8.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "4.0.10",
    "react-hook-form": "7.45.2",
    "ts-pattern": "5.0.4",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@bird-studio/eslint-config": "1.4.0",
    "@faker-js/faker": "8.0.2",
    "@graphql-codegen/cli": "4.0.1",
    "@graphql-codegen/introspection": "4.0.0",
    "@graphql-codegen/near-operation-file-preset": "2.5.0",
    "@graphql-codegen/typed-document-node": "5.0.1",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-operations": "4.0.1",
    "@graphql-tools/mock": "9.0.0",
    "@ladle/react": "2.16.1",
    "@playwright/test": "1.36.2",
    "@testing-library/react": "14.0.0",
    "@testing-library/react-hooks": "8.0.1",
    "@tsconfig/next": "2.0.0",
    "@tsconfig/node16-strictest": "1.0.4",
    "@tsconfig/node18": "18.2.0",
    "@types/express": "4.17.17",
    "@types/react": "18.2.15",
    "@types/sync-fetch": "0.4.0",
    "@vitest/coverage-istanbul": "0.33.0",
    "eslint": "8.45.0",
    "eslint-config-next": "13.4.12",
    "eslint-plugin-use-encapsulation": "1.1.0",
    "eslint-plugin-vitest": "0.2.6",
    "express": "4.18.2",
    "get-graphql-schema": "2.1.2",
    "graphql": "16.7.1",
    "graphql-tools": "9.0.0",
    "graphql-voyager": "1.3.0",
    "graphql-yoga": "4.0.3",
    "jscpd": "3.5.9",
    "jsdom": "22.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.0",
    "start-server-and-test": "2.0.0",
    "sync-fetch": "0.5.2",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "ts-unused-exports": "9.0.5",
    "typescript": "5.1.6",
    "vite": "4.4.7",
    "vitest": "0.33.0"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
